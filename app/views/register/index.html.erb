<section class="admin-products-new">

  <header class="page-header">
    <h1>Register &raquo; New User</h1>
  </header>

  

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      
      <%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |form| %>
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label "First Name" %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_area :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_area :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.text_area :password, class: 'form-control' %>
        </div>

        
        <%= form.submit 'Create User', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
